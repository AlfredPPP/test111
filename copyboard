import ctypes
import ctypes.wintypes

def get_full_name():
    EXTENDED_NAME_FORMAT = 3  # NameDisplay
    size = ctypes.wintypes.DWORD(0)
    ctypes.windll.secur32.GetUserNameExW(EXTENDED_NAME_FORMAT, None, ctypes.byref(size))
    name_buffer = ctypes.create_unicode_buffer(size.value)
    ctypes.windll.secur32.GetUserNameExW(EXTENDED_NAME_FORMAT, name_buffer, ctypes.byref(size))
    return name_buffer.value

full_name = get_full_name()
print(f"The full name is: {full_name}")