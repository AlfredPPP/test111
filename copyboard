import ctypes
import ctypes.wintypes

def get_full_name():
    size = ctypes.wintypes.DWORD(0)
    ctypes.windll.advapi32.GetUserNameExW(3, None, ctypes.byref(size))
    name_buffer = ctypes.create_unicode_buffer(size.value)
    ctypes.windll.advapi32.GetUserNameExW(3, name_buffer, ctypes.byref(size))
    return name_buffer.value

full_name = get_full_name()
print(f"The full name is: {full_name}")