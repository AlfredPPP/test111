import os
import pandas as pd

def find_csv_by_keyword(folder_path, keyword):
    # 遍历文件夹中的所有文件
    for file_name in os.listdir(folder_path):
        if file_name.endswith(".csv"):
            file_path = os.path.join(folder_path, file_name)
            try:
                # 只读取第一列，加快速度
                df = pd.read_csv(file_path, usecols=[0], dtype=str)  
                if keyword in df.iloc[:, 0].values:
                    print(file_name)
            except Exception as e:
                print(f"读取文件 {file_name} 时出错: {e}")

# 使用示例
if __name__ == "__main__":
    folder_path = "your_folder_path_here"   # 替换为你的文件夹路径
    keyword = "your_keyword_here"           # 替换为要搜索的关键字
    find_csv_by_keyword(folder_path, keyword)